<%= render "devise/shared/header", title: "Sign in to your account" %>
<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
  <div class="bg-white px-6 py-12 shadow-sm sm:rounded-lg sm:px-12">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <%= render "error", message: alert if alert %>
      <div>
        <%= f.label :email, class: "block text-sm/6 font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-amber-600 sm:text-sm/6" %>
        </div>
      </div>
      <div class>
        <%= f.label :password, class: "block text-sm/6 font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.password_field :password, autocomplete: "current-password", class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-amber-600 sm:text-sm/6" %>
        </div>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center justify-between">
          <div class="flex gap-3">
            <div class="flex h-6 shrink-0 items-center">
              <div class="group grid size-4 grid-cols-1">
                <%= f.check_box :remember_me, class: "col-start-1 row-start-1 appearance-none rounded-sm border border-gray-300 bg-white checked:border-amber-600 checked:bg-amber-600 indeterminate:border-amber-600 indeterminate:bg-amber-600 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-amber-600 disabled:border-gray-300 disabled:bg-gray-100 disabled:checked:bg-gray-100 forced-colors:appearance-auto" %>
                <svg viewBox="0 0 14 14" fill="none" class="pointer-events-none col-start-1 row-start-1 size-3.5 self-center justify-self-center stroke-white group-has-disabled:stroke-gray-950/25">
                  <path d="M3 8L6 11L11 3.5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="opacity-0 group-has-checked:opacity-100" />
                  <path d="M3 7H11" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="opacity-0 group-has-indeterminate:opacity-100" />
                </svg>
              </div>
            </div>
            <%= f.label :remember_me, class: "block text-sm/6 text-gray-900" %>
          </div>
          <div class="text-sm/6">
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-semibold text-amber-600 hover:text-amber-500" %><br />
          </div>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Sign in", class: "flex w-full justify-center rounded-md bg-amber-600 px-3 py-1.5 text-sm/6 font-semibold text-white shadow-xs hover:bg-amber-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-amber-600" %>
      </div>
    <% end %>
    <%= render "devise/shared/slack" %>
  </div>
  <p class="mt-10 text-center text-sm/6 text-gray-500">
    Not a member?
    <%= link_to "Start a 14 day free trial", new_registration_path(resource_name), class: "font-semibold text-amber-600 hover:text-amber-500" %><br />
  </p>
</div>
